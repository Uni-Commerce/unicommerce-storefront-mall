{
  "name": "@unicommerce/api",
  "version": "0.1.0",
  "description": "",
  "author": "UniCommerce",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "dev": "nest start --watch",
    "build": "nest build",
    "build-prod": "dotenv -e .env.prod -- pnpm nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy": "pm2 restart pm2.config.js",
    "list": "pm2 list",
    "delete": "pm2 delete all",
    "log": "pm2 log",
    "prisma:init": "prisma init",
    "prisma:seed-dev": "dotenv -e .env.local -- pnpm ts-node prisma/seed.ts",
    "prisma:regions-dev": "dotenv -e .env.local -- pnpm ts-node regions/regions.ts",
    "prisma:cms-dev": "dotenv -e .env.local -- pnpm ts-node prisma/cms.ts",
    "postgres:migrate-reset-dev": "dotenv -e .env.local -- pnpm prisma migrate reset",
    "postgres:migrate-dev": "dotenv -e .env.local -- pnpm prisma migrate dev",
    "postgres:db-push-dev": "dotenv -e .env.local -- pnpm prisma db push",
    "postgres:db-seed-dev": "dotenv -e .env.local -- pnpm prisma db seed",
    "postgres:generate-dev": "dotenv -e .env.local -- pnpm prisma generate",
    "postgres:migrate-reset-prod": "dotenv -e .env.prod -- pnpm prisma migrate reset",
    "postgres:migrate-prod": "dotenv -e .env.prod -- pnpm prisma migrate deploy",
    "postgres:db-push-prod": "dotenv -e .env.prod -- pnpm prisma db push",
    "postgres:db-seed-prod": "dotenv -e .env.prod -- pnpm prisma db seed",
    "postgres:generate-prod": "dotenv -e .env.prod -- pnpm prisma generate",
    "prisma:seed-prod": "dotenv -e .env.prod -- pnpm ts-node prisma/seed.ts",
    "prisma:regions-prod": "dotenv -e .env.prod -- pnpm ts-node regions/regions.ts",
    "prisma:cms-prod": "dotenv -e .env.prod -- pnpm ts-node prisma/cms.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.5.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "dotenv-cli": "^8.0.0",
    "ejs": "^3.1.10",
    "html-entities": "^2.5.3",
    "ioredis": "^5.6.1",
    "json-bigint": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "1.4.5-lts.2",
    "nest-winston": "^1.10.2",
    "nestjs-i18n": "^10.5.1",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.2.0",
    "prisma": "^6.5.0",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.2",
    "swagger-ui-express": "^5.0.1",
    "uid": "^2.0.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/crypto-js": "^4.2.2",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.17",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "@types/qs": "^6.14.0",
    "@types/supertest": "^6.0.0",
    "@unicommerce/eslint-config": "^0.5.0",
    "@unicommerce/ts-config": "^0.1.0",
    "eslint": "^9.21.0",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
